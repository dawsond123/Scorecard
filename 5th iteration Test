ConvToNum <- function(x) {
   x<-as.character(x)
   x[x=="NA"]<-0.75
   x[is.na(x)]<-0.75
   x[x=="ND"]<-0.75
   x[x=="D"]<-7
   x[x=="U"]<-0.25
   x<-as.numeric(x)
}

## Recategorising variables ##

x$IG[is.na(x$IG)]<- -1
# x$CYB[is.na(x$CYB)]<-5

# x$EQ<-ConvToNum(x$EQ)

# x<-within(x, IG[HG==0] <-NA)
# x$IG<-x$IG / x$HG

x2<-x
x6<-x
x2$testV6<-NULL
x6$testV<-NULL

x2$SVB[is.na(x2$SVB)]<- -1
x6$SVB[is.na(x6$SVB)]<- -500

dts2 <- split_df(x2, y="testV",ratio=0.6)
dts6 <- split_df(x6, y="testV6",ratio=0.6)

x2<-data.frame(dts2$train)
y2<-data.frame(dts2$test)
x6<-data.frame(dts6$train)
y6<-data.frame(dts6$test)


QFx<-x2$QF
QFy<-y2$QF
QFx6<-x6$QF
QFy6<-y6$QF
# EIx<-x2$EI
