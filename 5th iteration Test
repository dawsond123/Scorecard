x2<-woebin_ply(x2, bins2)  ##train_woe
y2<-woebin_ply(y2, bins2)  ##test_woe
x6<-woebin_ply(x6, bins6, print_step=0)
y6<-woebin_ply(y6, bins6, print_step=0)

x2$QF<-QFx
y2$QF<-QFy
